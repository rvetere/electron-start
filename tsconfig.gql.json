{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./src/main/graphql/dist",
    "strict": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/node", "@types/graphql"]
  },
  "include": ["./src/main/graphql/**/*.ts"],
  "exclude": ["node_modules", "**/*d.ts"]
}
